<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="@dimen/nav_header_height"
	android:background="@drawable/group_11"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:theme="@style/ThemeOverlay.AppCompat.Dark">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="53dp"
		android:layout_height="53dp"
		app:srcCompat="@drawable/ic_internal_storage_big"/>

	<RelativeLayout
		android:id="@+id/ll_storage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_storage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Storage"
			android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_storage"
			android:layout_marginTop="7dp"
			android:text="SDcard/emulat/0/"/>

		<ImageView
			android:id="@+id/iv_arrow"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:layout_alignTop="@+id/textView"
			android:layout_marginRight="6dp"
			android:background="@drawable/ic_triangle"/>
	</RelativeLayout>


</LinearLayout>
